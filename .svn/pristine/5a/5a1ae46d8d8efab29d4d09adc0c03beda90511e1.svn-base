	ret = 0
	key = GetKey()
	if (key >= 48 && key <= 58)						// F12->0-9
	{
		ShowSimpleHelp(hbuf, "F1 -> " # CharFromAscii (key))
	}
	else if (key >= 96 && key <= 96+26)     		//F12->A,Z
	{
